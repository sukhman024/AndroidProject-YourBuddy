<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermanentResidenceActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffc400"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/logoXmarks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/user" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="4"
            android:shadowColor="#000000"
            android:text="PR steps"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/info" />

    </androidx.appcompat.widget.Toolbar>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_apply_pr_visa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:cardCornerRadius="3dp"
        app:contentPadding="2dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="71dp"
                android:elevation="5dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Step 1"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="28sp"
                android:textStyle="bold" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="71dp"
                android:elevation="5dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Apply for a Visa"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="80dp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="Guidelines and help for Visa application" />
            <TextView
                android:id="@+id/status_pr_apply_visa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="Not Started"
                android:background="#607D8B"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAlignment="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_plan_pr_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:cardCornerRadius="3dp"
        app:contentPadding="2dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="71dp"
                android:elevation="5dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Step 2"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="28sp"
                android:textStyle="bold" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="71dp"
                android:elevation="5dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Plan Accomodation"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="80dp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="Guidelines for searching accommodation" />
            <TextView
                android:id="@+id/status_plan_pr_acc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="Not Started"
                android:background="#607D8B"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAlignment="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_apply_gov_portal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:cardCornerRadius="3dp"
        app:contentPadding="2dp"
        app:cardElevation="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="71dp"
                android:elevation="5dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Step 3"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="28sp"
                android:textStyle="bold" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="71dp"
                android:elevation="5dp"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:shadowColor="#000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="3"
                android:text="Apply on Gov Portals"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_marginTop="80dp"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="Guidelines for applying on gov portals" />
            <TextView
                android:id="@+id/status_gov_portals"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:text="Not Started"
                android:background="#607D8B"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAlignment="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>